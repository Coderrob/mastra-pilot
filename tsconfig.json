{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@repo/cli": ["./packages/cli/src"],
      "@repo/core": ["./packages/core/src"],
      "@repo/steps": ["./packages/steps/src"],
      "@repo/utils": ["./packages/utils/src"],
      "@repo/workflows": ["./packages/workflows/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/.mastra/**",
    "**/*.config.js",
    "**/*.config.ts"
  ]
}
