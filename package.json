{
  "author": {
    "name": "Robert Lindley",
    "url": "https://coderrob.com"
  },
  "description": "A TypeScript monorepo for workflow automation with pnpm workspaces",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.25",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "jscpd": "^4.0.5",
    "mastra": "^0.18.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.22.1",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "name": "@coderrob/mastra-pilot",
  "packageManager": "pnpm@8.15.3",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "cli": "pnpm --filter @repo/cli build && node packages/cli/dist/index.js",
    "cli:run": "pnpm run cli run",
    "cli:step": "pnpm run cli step",
    "cli:workflow": "pnpm run cli workflow",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "mastra:dev": "pnpm --filter @repo/cli mastra:dev",
    "quality": "pnpm run lint && pnpm run test:coverage && pnpm run quality:complexity && pnpm run quality:duplication",
    "quality:complexity": "eslint . --max-warnings 0",
    "quality:duplication": "jscpd .",
    "release": "turbo run build && changeset publish",
    "test": "turbo run test",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "version-packages": "changeset version"
  },
  "version": "0.0.1"
}
