{
  "name": "mastra-pilot",
  "version": "0.0.0",
  "private": true,
  "description": "A TypeScript monorepo for workflow automation with pnpm workspaces",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.25",
    "eslint": "^9.39.1",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.22.1",
    "vitest": "^4.0.8"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
