{
  "name": "mastra-pilot",
  "version": "0.0.0",
  "private": true,
  "description": "A TypeScript monorepo for workflow automation with pnpm workspaces",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
